<Grid
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid.Resources>
        <ControlTemplate TargetType="RadioButton" x:Key="BaseButtonStyle">
            <Border
                    Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="Black"
                    BorderThickness="0"
                >
                <ContentPresenter
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        
                    />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="White" />
                    <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="Border" Property="BorderBrush" Value="White"/>
                    <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Grid.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <TextBlock Text="Skirmish" HorizontalAlignment="Center" FontSize="30"/>
        <TextBlock Text="Team" HorizontalAlignment="Center" FontSize="20" Margin="0,50,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <RadioButton Template="{StaticResource BaseButtonStyle}" Width="100" Height="30" Margin="5" Content="Red" Background="Red" GroupName="First Group" />
            <RadioButton Template ="{StaticResource BaseButtonStyle}" Width="100" Height="30" Margin="5" Content="Blue" Background="Blue" GroupName="First Group" />
        </StackPanel>
        <TextBlock Text="Map" HorizontalAlignment="Center" FontSize="20" Margin="0,50,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <RadioButton Template="{StaticResource BaseButtonStyle}" Width="100" Height="30" Margin="5" Content="Map 1" Background="Gray"/>
            <RadioButton Template="{StaticResource BaseButtonStyle}" Width="100" Height="30" Margin="5" Content="Map 2" Background="Gray"/>
            <RadioButton Template="{StaticResource BaseButtonStyle}" Width="100" Height="30" Margin="5" Content="Map 3" Background="Gray"/>
        </StackPanel>
        <Button Width="100" Height="30" Content="Start" Margin="0,50,0,0"/>
    </StackPanel>
</Grid>
