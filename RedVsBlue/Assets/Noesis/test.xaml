<Grid
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
		<TextBlock Text="Skirmish" HorizontalAlignment="Center" FontSize="30"/>
		<TextBlock Text="Team" HorizontalAlignment="Center" FontSize="20" Margin="0,50,0,0"/>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
			<Button Width="100" Height="30" Margin="5" Content="Red" Background="Red"/>
			<Button Width="100" Height="30" Margin="5" Content="Blue" Background="Blue"/>
		</StackPanel>
		<TextBlock Text="Map" HorizontalAlignment="Center" FontSize="20" Margin="0,50,0,0"/>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
			<Button Width="100" Height="30" Margin="5" Content="Map 1"/>
			<Button Width="100" Height="30" Margin="5" Content="Map 2"/>
			<Button Width="100" Height="30" Margin="5" Content="Map 3"/>
		</StackPanel>
		<Button Width="100" Height="30" Content="Start" Margin="0,50,0,0"/>
	</StackPanel>
</Grid>